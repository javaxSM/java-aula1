package course;


import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.time.Instant;
import java.util.Calendar;
import java.util.Date;

public class calendar {

	public static void main(String[] args) throws ParseException {
		SimpleDateFormat sdf1 = new SimpleDateFormat("dd/MM/yyyy HH:mm:ss");
		
		Date d = Date.from(Instant.parse("2019-01-13T21:44:00Z"));
		
		System.out.println(sdf1.format(d));
		
		Calendar cal = Calendar.getInstance();
		cal.setTime(d);
		cal.add(Calendar.HOUR_OF_DAY, 2); // adiciona data + o incremento da hora que voce queira
		d = cal.getTime();
		
		System.out.println(sdf1.format(d));
		
		
		System.out.println("-------------------------------------------");
		
		// Obetendo topicos do calendario
		int minutes = cal.get(Calendar.MINUTE); // Separa os minutos.
		System.out.println(minutes);
		int hours = cal.get(Calendar.HOUR); // Separa os segundos.
		System.out.println(hours);
		int month = cal.get(Calendar.MONTH); // Mes come√ßa sempre do 0 (janeiro) etc..
		System.out.println(month);
		

	}

}
